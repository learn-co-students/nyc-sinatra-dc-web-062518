<h1>New Figure Form</h1>
<form action="/figures" method="POST">
  <label>Name:</label>
  <input type="text" name="figure[name]" id="figure_name"><br>
  <h2>Titles</h2><br><br>
  <%Title.all.each do |title|%>
    <%=title.name%><input type="checkbox" name="figure[title_ids][]" id="title_<%=title.id%>" value="<%=title.id%>">
    <br>
    <%end%>
    <h2>or create new title</h2>
    <input type="text" name="title[name]" id="new_title">

    <h2>Landmarks</h2>
    <%Landmark.all.each do |landmark|%>
      <%=landmark.name%><input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%=landmark.id%>" value="<%=landmark.id%>">
        <br>
      <%end%>

    <h2>or create new landmark</h2>
    <label>Name:</label>
    <input type="text" name="landmark[name]" id="new_landmark">
    <label>Year Completed:</label>
    <input type="text" name="landmark[year_completed]" id="landmark_year_completed">
    <br>
    <input type="submit" value="Create New Figure" id="Create New Figure"/>
</form>

  </body>
</html>
